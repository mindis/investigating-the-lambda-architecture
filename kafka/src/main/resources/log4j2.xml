<Configuration>
    <Appenders>

        <Console name="console" target="SYSTEM_OUT" ignoreExceptions="true">
            <PatternLayout pattern="%highlight{%d{ABSOLUTE} %c{3} %-5level: %msg%n%throwable}"/>
        </Console>

        <File name="performance-file" fileName="logs/performance.log" append="false">
            <filters>
                <MarkerFilter marker="PERFORMANCE" onMatch="ACCEPT" onMismatch="DENY"/>
            </filters>
            <PatternLayout>
                <Pattern>%d{UNIX_MILLIS} %p %c{1.} [%t] %m%n</Pattern>
            </PatternLayout>
        </File>

        <Async name="performance-file-async">
            <AppenderRef ref="performance-file"/>
        </Async>
    </Appenders>

    <Loggers>
        <!-- performance logs -->
        <Logger name="ch.uzh.ddis.thesis.lambda_architecture" level="INFO" additivity="false">
            <AppenderRef ref="performance-file-async"/>
        </Logger>

        <!-- console logger for own code -->
        <Logger name="ch.uzh.ddis.thesis" level="INFO" additivity="false">
            <filters>
                <MarkerFilter marker="PERFORMANCE" onMatch="DENY" onMismatch="ACCEPT"/>
            </filters>
            <AppenderRef ref="console"/>
        </Logger>

        <!-- general console output -->
        <Root level="WARN">
            <AppenderRef ref="console"/>
        </Root>
    </Loggers>

</Configuration>